## Usage:
##   cd infra/compose/shared
##   cp .env.example .env
##   docker compose --env-file .env up -d

# Grafana admin login (change in production)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me

# Reverse proxy hostnames (admin LAN / internal DNS)
TRAEFIK_DASHBOARD_HOSTNAME=traefik.sentientengine.ai
GRAFANA_HOSTNAME=grafana.sentientengine.ai
AUTH_HOSTNAME=auth.sentientengine.ai
TECH_UI_HOSTNAME=tech.sentientengine.ai
CREATIVE_UI_HOSTNAME=creative.sentientengine.ai
GM_UI_HOSTNAME=mythra.sentientengine.ai

# sentient-auth database password (used by auth-db + sentient-auth)
AUTH_DB_PASSWORD=change-me

# JWT signing secret (HS256) shared between sentient-auth and all room APIs.
# Must be >= 16 chars.
SENTIENT_JWT_SECRET=change-me-change-me

# One-time bootstrap bearer token for creating the first admin user.
# Leave empty to disable /v8/auth/bootstrap once bootstrapped.
AUTH_BOOTSTRAP_TOKEN=

# Auth hardening defaults (optional)
AUTH_MIN_PASSWORD_LEN=12
AUTH_JWT_TTL_SECONDS=43200
AUTH_LOGIN_RATE_LIMIT_PER_WINDOW=10
AUTH_LOGIN_RATE_LIMIT_WINDOW_SECONDS=60
